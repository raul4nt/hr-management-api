generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  @@map("admins")
}

model Employee {
  id         String            @id @default(uuid())
  name       String
  email      String            @unique
  positionId String?
  position   Position?         @relation(fields: [positionId], references: [id])
  benefits   EmployeeBenefit[]
  vacations  Vacation[]
  createdAt  DateTime          @default(now())

  @@map("employees")
}

model Position {
  id        String     @id @default(uuid())
  title     String
  salary    Float
  employees Employee[]

  @@map("positions")
}

model Benefit {
  id        String            @id @default(uuid())
  name      String
  value     Float
  employees EmployeeBenefit[]

  @@map("benefits")
}

model EmployeeBenefit {
  id         String   @id @default(uuid())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String
  benefit    Benefit  @relation(fields: [benefitId], references: [id])
  benefitId  String
  assignedAt DateTime @default(now())

  @@unique([employeeId, benefitId])
  @@map("employee_benefits")
}

model Vacation {
  id         String   @id @default(uuid())
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String
  startDate  DateTime
  endDate    DateTime

  @@map("vacations")
}

